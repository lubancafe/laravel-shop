    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Listen for XDebug on Homestead",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/home/vagrant/code": "C:\\dev\\laravel\\sandbox",
                "/home/vagrant/sandbox/laravel-shop": "C:\\dev\\laravel\\sandbox\\laravel-shop",
                "/home/vagrant/sandbox/laravel-shop/public": "C:\\dev\\laravel\\sandbox\\laravel-shop\\public"
            },
            "port": 9080
        }        
    ]
}